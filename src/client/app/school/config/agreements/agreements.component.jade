div.container
  button(md-raised-button,type='button',(click)='btnNew_Clicked()') New
  button(md-raised-button,type='button',(click)='btnDelete_Clicked()',[disabled]='deleteDisabled') Delete
  button(md-raised-button,type='button',(click)='btnEdit_Clicked()',[disabled]='editDisabled') Edit
  div.loading(*ngIf='showLoading')
    md-spinner.loading

div.container
  div.grid
    div.header
      div.agmt-select &nbsp;
      div.agmt-name Name
      div.agmt-desc Description
    div.agmt(*ngFor='let agmt of agreements; let i=index')
      div.agmt-select
        md-checkbox((click)='chkSelected_Clicked(i)')
      div.agmt-name {{agmt.name}}
      div.agmt-desc {{agmt.description}}