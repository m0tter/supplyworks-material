md-dialog-content
  md-tab-group
    md-tab(label='General')
      md-input-container.width-100
        input(md-input,placeholder='Name',[(ngModel)]='agmt.name')

      md-input-container.width-100
        textarea(md-input,placeholder='Description',[(ngModel)]='agmt.description')
    md-tab(label='Options')
    md-tab(label='Members')
    
md-dialog-actions
  div.btn-container
    button.btn-cancel(id='btnCancel',md-mini-fab,(click)='btnCancel_Click()')
      md-icon clear
    button.btn-ok(id='btnOK',md-fab,(click)='btnOK_Click()')
      md-icon done