{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "removeComments": false,
        "suppressImplicitAnyIndexErrors": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "skipLibCheck": true
    },
    "exclude": [
        ".git",
        "node_modules",
        "src/client/node_modules",
        "src/server/node_modules",
        "dist"
    ]
}